<div class="col-lg-4 col-md-6 col-sm-12 mb-4">
  <div class="card shadow-sm h-100 d-flex flex-column">
    <%= image_tag record.thumbnail, class: 'card-img-top', alt: record.title %>
    <div class="card-body d-flex flex-column">
      <h5 class="card-title">
        <%= record.title %>
      </h5>
      <div class="d-flex mt-auto">
        <%= link_to 'View', crate_record_path(record.crate, record), { class: 'btn btn-outline-primary mt-auto me-2 flex-fill' } %>
        <%= button_to 'Delete', crate_record_path(record.crate, record), method: :delete,
                      data: { turbo_confirm: 'Are you sure you want to delete this crate?' },
                      class: 'btn btn-danger flex-fill' %>
      </div>
    </div>
  </div>
</div>